<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Options">
    <PreferenceCategory android:title="Application Settings">
        <CheckBoxPreference
            android:title="Turn off Notification"
            android:summary="Turn off notifications for MegaBlock."
            android:key="MegaBlock"
            android:defaultValue="FALSE" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Miscellaneous">
        <Preference
            android:key="RailMap"
            android:title="View Rail Map"></Preference>
        <Preference
            android:key="MegaBlockInfo"
            android:title="Mega Block"
            android:summary="Get all information about upcoming Mega Blocks"></Preference>
        <Preference
            android:key="AboutApp"
            android:title="About Travel Mumbai"></Preference>
        <Preference
            android:key="ClearData"
            android:title="Clear Application Data"></Preference>
        <Preference
            android:key="Contact"
            android:title="Contact App Developer"
            android:summary="via Email">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/contact_developer_uri" />
        </Preference>
        <Preference
            android:key="CurrentVersion"
            android:title="Current Version"></Preference>


    </PreferenceCategory>
    <PreferenceCategory android:title="Credits">
        <Preference android:title="App Developer" android:summary="Mahesh"></Preference>
    </PreferenceCategory>
</PreferenceScreen>